<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutsMatchWrap"
    android:layout_marginTop="@dimen/margin_padding_small">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_small"
        android:paddingTop="@dimen/margin_padding_xxxnormal"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/margin_padding_normal"
        app:cardElevation="@dimen/margin_padding_little">

        <TextView
            android:id="@+id/textViewTitleIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ingredients_title_oval"
            android:paddingBottom="@dimen/margin_padding_small"
            android:paddingEnd="@dimen/margin_padding_normal"
            android:paddingStart="@dimen/margin_padding_xnormal"
            android:paddingTop="@dimen/margin_padding_small"
            android:text="@string/ingredients"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_xlarge" />

        <TextView
            android:id="@+id/textViewIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_padding_normal"
            android:layout_marginEnd="@dimen/margin_padding_normal"
            android:layout_marginStart="@dimen/margin_padding_normal"
            android:layout_marginTop="@dimen/margin_padding_xxlarge"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_xxnormal"
            tools:hint="@string/ingredients_hint" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
